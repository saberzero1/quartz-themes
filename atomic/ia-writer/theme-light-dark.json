{
  "body": {
    ".theme-dark { --font-text": {
      "light": "\"iA Writer Duo\", var(--font-text-override), \"iA Writer Duo\", var(--font-interface)",
      "dark": null
    },
    "--line-height-normal": { "light": "1.7", "dark": null },
    "--link-decoration": { "light": "underline", "dark": null },
    "--link-unresolved-decoration-color": {
      "light": "var(--text-muted)",
      "dark": null
    },
    "--link-external-decoration-color": {
      "light": "var(--text-muted)",
      "dark": null
    },
    "--checklist-done-decoration": { "light": "line-through", "dark": null },
    "--checkbox-color": { "light": "transparent", "dark": null },
    "--checkbox-color-hover": { "light": "transparent", "dark": null },
    "--checkbox-marker-color": { "light": "transparent", "dark": null }
  },
  ".mermaid > svg": {
    "filter": {
      "light": null,
      "dark": "invert(100%) hue-rotate(180deg) saturate(1.25)"
    },
    "} .markdown-source-view.mod-cm6 .cm-hmd-codeblock { --indentation-guide-editing-indent": {
      "light": null,
      "dark": "0"
    },
    "} .markdown-source-view.mod-cm6 .cm-preview-code-block pre { margin": {
      "light": null,
      "dark": "0"
    },
    "} .markdown-source-view.mod-cm6 .code-block-flair { position": {
      "light": null,
      "dark": "absolute"
    },
    "right": { "light": null, "dark": "6px" },
    "top": { "light": null, "dark": "6px" },
    "z-index": { "light": null, "dark": "1" },
    "display": { "light": null, "dark": "inline-block" },
    "padding": { "light": null, "dark": "var(--size-4-1) var(--size-4-2)" },
    "border-radius": { "light": null, "dark": "var(--code-radius)" },
    "font-family": { "light": null, "dark": "var(--font-interface)" },
    "font-size": { "light": null, "dark": "var(--font-ui-smaller)" },
    "color": { "light": null, "dark": "var(--text-muted)" },
    "cursor": { "light": null, "dark": "var(--cursor)" }
  },
  ".cm-s-obsidian .cm-hmd-frontmatter.cm-atom": {
    "color": { "light": null, "dark": "var(--color-accent)" }
  }
}
