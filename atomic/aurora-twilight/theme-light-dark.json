{
  "body": {
    "background-color": { "light": "var(--background-primary)", "dark": null },
    "color": { "light": "var(--text)", "dark": null }
  },
  "body h1": { "color": "var(--h1-color)" },
  "body h2": { "color": "var(--h2-color)" },
  "body h3": { "color": "var(--h3-color)" },
  "body h4": { "color": "var(--h4-color)" },
  "body h5": { "color": "var(--h5-color)" },
  "body h6": { "color": "var(--h6-color)" },
  "body em": { "color": "var(--italic-color)" },
  "body strong": {
    "color": "var(--bold-color)",
    "}": { "light": null, "dark": "" }
  },
  ".mermaid > svg": {
    "filter": {
      "light": null,
      "dark": "invert(100%) hue-rotate(180deg) saturate(1.25)"
    },
    "} .markdown-source-view.mod-cm6 .cm-hmd-codeblock { --indentation-guide-editing-indent": {
      "light": null,
      "dark": "0"
