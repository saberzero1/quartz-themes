{
  "body": {
    ".theme-dark { --color-red-rgb": {
      "light": "var(--wyrd-red-rgb)",
      "dark": null
    },
    "--color-red": { "light": "var(--wyrd-red)", "dark": null },
    "--color-orange": { "light": "var(--wyrd-orange)", "dark": null },
    "--color-yellow": { "light": "var(--wyrd-yellow)", "dark": null },
    "--color-green-rgb": { "light": "var(--wyrd-green-rgb)", "dark": null },
    "--color-green": { "light": "var(--wyrd-green)", "dark": null },
    "--color-cyan": { "light": "var(--wyrd-cyan)", "dark": null },
    "--color-blue": { "light": "var(--wyrd-blue)", "dark": null },
    "--color-purple": { "light": "var(--wyrd-purple)", "dark": null },
    "--color-pink": { "light": "var(--wyrd-pink)", "dark": null },
    "--text-highlight-bg": {
      "light": "rgba(var(--wyrd-yellow-rgb), 0.7)",
      "dark": null
    },
    "--text-highlight-bg-active": {
      "light": "rgba(var(--wyrd-yellow-light-rgb), 0.8)",
      "dark": null
    }
  },
  ".mermaid > svg": {
    "filter": {
      "light": null,
      "dark": "invert(100%) hue-rotate(180deg) saturate(1.25)"
    },
    "} .markdown-source-view.mod-cm6 .cm-hmd-codeblock { --indentation-guide-editing-indent": {
      "light": null,
      "dark": "0"
    },
    "} .markdown-source-view.mod-cm6 .cm-preview-code-block pre { margin": {
      "light": null,
      "dark": "0"
    },
    "} .markdown-source-view.mod-cm6 .code-block-flair { position": {
      "light": null,
      "dark": "absolute"
    },
    "right": { "light": null, "dark": "6px" },
    "top": { "light": null, "dark": "6px" },
    "z-index": { "light": null, "dark": "1" },
    "display": { "light": null, "dark": "inline-block" },
    "padding": { "light": null, "dark": "var(--size-4-1) var(--size-4-2)" },
    "border-radius": { "light": null, "dark": "var(--code-radius)" },
    "font-family": { "light": null, "dark": "var(--font-interface)" },
    "font-size": { "light": null, "dark": "var(--font-ui-smaller)" },
    "color": { "light": null, "dark": "var(--text-muted)" },
    "cursor": { "light": null, "dark": "var(--cursor)" }
  }
}
